<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Middo Naito"}); %>
<body>

    <%- include('../partials/header'); %>
    

    <main class="index-main">


            
        <!-- Slideshow container renombrado a nuestro banner-home -->
        <div class="banner-home">
            <!-- <img src="/images/banner-home.jpeg" alt="moda-primavera-2020"> -->
                
            <div class="myAutoSlides fade" style="display: block;">
                <div class="numbertext">1 / 4</div>
                <div class="container-banner-elements">
                    <img src="https://www.hunterandbligh.com.au/wp-content/uploads/2019/08/london-fashion-week-men-s-street-style-spring-summer-2020-runway-season-10-june-8-1.jpg">
                    <div class="text-zone">
                        <div class="title-peque">Señores caminando</div>
                    </div>
                </div>
            </div>
        
            <div class="myAutoSlides fade">
                <div class="numbertext">2 / 4</div>
                <div class="container-banner-elements">
                    <img src="/images/banner-home.jpeg">
                    <div class="text-zone">
                        <div class="title-peque">Señorito asiático</div>
                    </div>
                </div>
            </div>
        

            <div class="myAutoSlides fade">
                <div class="numbertext">3 / 4</div>
                <div class="container-banner-elements">
                    <img src="https://cdn.pixabay.com/photo/2015/09/02/13/18/person-918986_960_720.jpg">
                    <div class="text-zone">
                        <div class="title-peque">Señorita leñadora (?</div>
                    </div>
                </div>
            </div>

            <div class="myAutoSlides fade">
                <div class="numbertext">4 / 4</div>
                <div class="container-banner-elements">
                    <img src="https://cdn.pixabay.com/photo/2016/11/29/12/51/adult-1869621_960_720.jpg">
                    <div class="text-zone">
                        <div class="title-peque">Señor con libro</div>
                    </div>
                </div>
            </div>
            
        </div>

        <p class="section-title">PRODUCTOS DESTACADOS</p>
        <section class="featured-products">
            
            <% productsData.forEach(el => { %>    
                <% let {name, price, alt, image} = el %>
                <%- include('../partials/oneProduct', {name, price, alt, image}) %>
            <% }); %>

            <!--<article class="product">
                <img src="/images/products/remerita.webp" alt="">
                <div class="product-details">
                    <div class="product-name">Remera Adidas</div>
                    <div class="product-price">$1.999</div>
                </div>    
            </article> -->

                                   
        </section>

    </main>

    <div class="btn">
        <a href="/products"><button class="btn-black btn-grey">VER TODOS LOS PRODUCTOS</button></a>
    </div>
    
    <%- include('../partials/footer'); %>
    
</body>
</html>