<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Carrito de Compras"}); %>
<body>

    <%- include('../partials/header'); %>

    <main class="cart">
        <p class="section-title cart-title">CARRITO DE COMPRAS</p>
        <% productsData.forEach(el => { %>    
            <%- include('../partials/oneLineInCart', {product: el}); %>
        <% }); %>

        <div class="total-cart">
            <b>SUBTOTAL (Sin envio)</b><b>$67.200</b>
        </div>

        <div class="product-in-cart deliver-type" >
            <div>
                <i class="fas fa-truck"></i>
                <span>Opciones de env√≠o</span>            
            </div>
            <div>
                <select id="">
                    <option value="directo">Retiro en local</option>
                    <option value="correo-local">Envio por correo a sucursal</option>
                    <option value="correo-casa">Envio por correo a domicilio</option>
                </select>
            </div>
        </div>

        <div class="border"></div>

        <div class="total-cart">
            <b>TOTAL</b><b>$67.200</b>
        </div>

        <div class="btn">
            <a href="/"><button class="btn-default">INICIAR COMPRA</button></a>
        </div>
    </main>

    <%- include('../partials/footer'); %>
    
</body>
</html>